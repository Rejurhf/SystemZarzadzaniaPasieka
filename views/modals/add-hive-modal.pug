div(id="modalAddHive" class="modal")
    .modal-content(action="/hive")
        .modal-header
            span(class="close" onclick="closeModal(this)") &times;
            h2 Dodaj Ul
        .modal-body
            form
                .inputBox.apiaryName
                    label Pasieka: 
                    select(not-null="true" name="apiaryName")
                        option(value="") 
                .inputBox.groupName
                    label Nazwa grupy: 
                    select(name="groupName")
                        option(value="")
                .inputBox.hiveNum
                    label Numer ula: 
                    input(type="number" not-null="true" name="hiveNum")
                .inputBox.hiveCreationDate
                    label Data stworzenia:
                    input(type="datetime-local" not-null="true" 
                        name="hiveCreationDate") 
        .modal-footer
            button(onclick="closeModal(this)") Anuluj
            button(onclick="validateModal(this)") Dodaj
