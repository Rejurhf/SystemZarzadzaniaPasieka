div(id="modalAddFamily" class="modal")
    .modal-content(action="/family" action-type="POST")
        .modal-header
            span(class="close" onclick="closeModal(this)") &times;
            h2 Dodaj Rodzinę
        .modal-body
            form
                .inputBox.apiaryID
                    label Pasieka: 
                    select(not-null="true" name="apiaryID" 
                            onchange="onChangeApiary(this)")
                        option(value="")
                .inputBox.groupID
                    label Nazwa grupy: 
                    select(name="groupID" onchange="onChangeGroup(this)")
                        option(value="")
                .inputBox.hiveID
                    label Numer ula: 
                    select(not-null="true" name="hiveID")
                        option(value="")
                .inputBox.creationDate
                    label Data stworzenia:
                    input(type="date" not-null="true" 
                        name="creationDate") 
                .inputBox.state
                    label Stan: 
                    select(not-null="true" name="state")
                        option(value="")
                .inputBox.size
                    label Wielkość: 
                    select(not-null="true" name="size")
                        option(value="")
                .inputBox.origin
                    label Pochodzenie: 
                    select(not-null="true" name="origin")
                        option(value="")
                .inputBox.price
                    label Cena: 
                    input(type="number" step="0.01" name="price")
        hr
        .modal-footer
            button(onclick="closeModal(this)") Anuluj
            button(onclick="validateModal(this)") Dodaj
