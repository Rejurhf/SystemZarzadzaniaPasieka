
div(id="modalTreatment" class="modal")
    .modal-content(action="/treatment" action-type="POST")
        .modal-header
            span(class="close" onclick="closeModal(this)") &times;
            h2 Leczenie
        .modal-body
            form
                .inputBox.apiaryName
                    label Nazwa: 
                    input(type="text" not-null="true" name="apiaryName")
                .inputBox.creationDate
                    label Data stworzenia:
                    input(type="date" not-null="true" 
                        name="creationDate") 
        hr
        .modal-footer
            button.secondary(onclick="closeModal(this)") Anuluj
            button(onclick="validateModal(this)") Dodaj
